---
import { tr } from "../i18n/tr";
const t = tr.footer;
---
<footer class="border-t mt-24 py-10 text-brand">
  <div class="mx-auto max-w-5xl px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
    {t.columns.map(col => (
      <div>
        <h3 class="font-semibold mb-3">{col.title}</h3>
        <ul class="space-y-2">
          {col.links.map(link => (<li><a class="hover:underline" href="#">{link}</a></li>))}
        </ul>
      </div>
    ))}
  </div>
  <div class="mx-auto max-w-5xl px-4 mt-8 text-sm flex flex-col md:flex-row md:items-center md:justify-between gap-2">
    <p>{t.copyright}</p>
    <p>{t.policies}</p>
  </div>
</footer>
