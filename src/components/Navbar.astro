<header class="sticky top-0 z-30 border-b border-gray-200/70 bg-white/80 backdrop-blur">
  <div class="mx-auto max-w-5xl px-4 flex items-center justify-between h-16">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <img src="/images/logo-welldrive.webp" alt="WellDrive" class="h-6 md:h-7" loading="eager" />
      <span class="sr-only">WellDrive</span>
    </a>

    <!-- Menu -->
    <nav class="hidden md:flex items-center gap-7 lg:gap-9 text-[16px] md:text-[17px] lg:text-[18px] text-gray-700">
      <a href="/wd750" class="hover:text-black">WD750</a>
      <a href="/wd770" class="hover:text-black">WD770</a>
      <a href="/destek" class="hover:text-black">Destek</a>
      <a href="/iletisim" class="hover:text-black">İletişim</a>
    </nav>

    <!-- Right: Search + Language -->
    <div class="relative flex items-center gap-3">
      <!-- Search button -->
      <button id="searchToggle" class="p-2 rounded-lg hover:bg-gray-100" aria-label="Ara" aria-expanded="false" aria-controls="searchPanel">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m1.6-4.4a6 6 0 11-12 0 6 6 0 0112 0z"/>
        </svg>
      </button>

      <!-- Language dropdown (placeholder) -->
      <details class="relative">
        <summary class="cursor-pointer text-sm text-gray-700">Dil / Language</summary>
        <div class="absolute right-0 mt-2 w-44 bg-white rounded-xl shadow p-2 text-sm">
          <a href="/tr" class="flex items-center gap-2 py-1 text-gray-700"><img src="/images/flag-tr.webp" class="h-4 w-4"/> Türkçe</a>
          <a href="/en" class="flex items-center gap-2 py-1 text-gray-400 pointer-events-none"><img src="/images/flag-en.webp" class="h-4 w-4"/> English (yakında)</a>
          <a href="/ru" class="flex items-center gap-2 py-1 text-gray-400 pointer-events-none"><img src="/images/flag-ru.webp" class="h-4 w-4"/> Русский (скоро)</a>
        </div>
      </details>

      <!-- Animated search panel -->
      <form id="searchPanel"
            action="/search"
            class="absolute right-0 top-12 w-[94vw] max-w-md bg-white/95 backdrop-blur border border-gray-200 shadow-xl rounded-2xl p-3
                   opacity-0 scale-95 pointer-events-none transition-all duration-300">
        <input name="q"
               placeholder="Sitede ara…"
               class="w-full rounded-xl border border-gray-300 focus:border-gray-500 outline-none py-2 px-3" />
      </form>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('searchToggle');
  const panel = document.getElementById('searchPanel');
  let open = false;
  function closePanel(){
    open = false;
    btn?.setAttribute('aria-expanded','false');
    panel?.classList.add('opacity-0','scale-95','pointer-events-none');
    panel?.classList.remove('opacity-100','scale-100');
  }
  function openPanel(){
    open = true;
    btn?.setAttribute('aria-expanded','true');
    panel?.classList.remove('opacity-0','scale-95','pointer-events-none');
    panel?.classList.add('opacity-100','scale-100');
    setTimeout(()=>panel?.querySelector('input')?.focus(), 50);
  }
  btn?.addEventListener('click', (e)=>{
    e.preventDefault();
    open ? closePanel() : openPanel();
  });
  document.addEventListener('keydown', (e)=>{
    if (e.key === 'Escape' && open) closePanel();
  });
  document.addEventListener('click', (e)=>{
    if (!open) return;
    if (!panel.contains(e.target) && !btn.contains(e.target)) closePanel();
  });
</script>